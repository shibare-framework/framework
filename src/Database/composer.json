{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "shibare/database",
  "description": "S.S.S. Shibare Framework - Database Component",
  "type": "library",
  "keywords": [
    "shibare",
    "database",
    "mysql"
  ],
  "homepage": "https://shibare-framework.github.io/",
  "readme": "README.md",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Masaru Yamagishi",
      "email": "m.yamagishi90+git@gmail.com",
      "homepage": "https://cafe-capy.net",
      "role": "Author"
    }
  ],
  "support": {
    "docs": "https://shibare-framework.github.io/",
    "issues": "https://github.com/shibare-framework/framework/issues",
    "source": "https://github.com/shibare-framework/framework/"
  },
  "require": {
    "php": "~8.2.0|~8.3.0",
    "ext-pdo": "*"
  },
  "require-dev": {
    "ext-pdo_mysql": "*",
    "ext-pdo_sqlite": "*"
  },
  "suggest": {
    "ext-pdo_mysql": "Need to use MySQL",
    "ext-pdo_sqlite": "Need to use sqlite"
  },
  "autoload": {
    "psr-4": {
      "Shibare\\Database\\": ""
    },
    "exclude-from-classmap": [
      "Tests/"
    ]
  },
  "scripts": {
    "test": "phpunit *Test.php"
  },
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
